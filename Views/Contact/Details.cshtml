@model Contact

@section MyCss {
    <link rel="stylesheet" href="~/css/Myclass.css/" asp-append-version="true" />
}

<div style="border: 2px solid #4CAF50; padding: 15px; margin: 10px; background-color: #f4f4f9; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <p style="font-size: 18px; font-weight: bold; color: #333;">ID: @Model.ID</p>
    <p style="font-size: 16px; color: #555;">Name: @Model.Name</p>
    <p style="font-size: 16px; color: #555;">Surname: @Model.Surname</p>
</div>